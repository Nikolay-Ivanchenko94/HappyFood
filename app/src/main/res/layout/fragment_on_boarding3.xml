<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.onboarding.OnBoarding3Fragment">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">


      <Button
          android:layout_width="69dp"
          android:layout_height="48dp"
          android:id="@+id/btnSkip"
          android:text="Skip"
          android:textColor="@color/black"
          android:background="?android:attr/selectableItemBackground"
          android:layout_marginEnd="3dp"
          android:layout_marginBottom="3dp"
          app:layout_constraintVertical_bias="0.0"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginTop="0dp"
          android:layout_marginStart="340dp"
          tools:ignore="HardcodedText,MissingConstraints" />



      <ImageView
          android:layout_width="250dp"
          android:layout_height="250dp"
          android:id="@+id/ivCooking"
          android:layout_marginEnd="3dp"
          android:layout_marginBottom="3dp"
          app:layout_constraintVertical_bias="0.0"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginTop="100dp"
          android:layout_marginStart="80dp"
          android:background="@drawable/cofeshop"
          tools:ignore="ContentDescription,MissingConstraints" />



      <TextView
          android:layout_width="301dp"
          android:layout_height="48dp"
          android:id="@+id/tvSupport"
          android:text="27/7 support for you"
          android:textColor="@color/purple.xml"
          android:layout_marginEnd="3dp"
          android:layout_marginBottom="3dp"
          app:layout_constraintVertical_bias="0.0"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginTop="400dp"
          android:layout_marginStart="80dp"
          android:textSize="26sp"
          tools:ignore="HardcodedText,MissingConstraints,SpUsage" />


      <TextView
          android:layout_width="301dp"
          android:layout_height="48dp"
          android:id="@+id/tvText"
          android:text="Experience peace of mind while tracking your order in real time"
          android:layout_marginEnd="3dp"
          android:layout_marginBottom="3dp"
          app:layout_constraintVertical_bias="0.0"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginTop="450dp"
          android:layout_marginStart="80dp"
          android:textSize="16sp"
          tools:ignore="HardcodedText,MissingConstraints,SpUsage" />


      <Button
          android:layout_width="101dp"
          android:layout_height="101dp"
          android:id="@+id/btnCircle3"
          android:background="@drawable/circle3"
          android:layout_marginEnd="3dp"
          android:layout_marginBottom="3dp"
          app:layout_constraintVertical_bias="0.0"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginTop="520dp"
          android:layout_marginStart="150dp"
          android:contentDescription="Circle Button"
          tools:ignore="HardcodedText,MissingConstraints" />



      <Button
          android:layout_width="396dp"
          android:layout_height="63dp"
          android:id="@+id/btnNext"
          android:background="@drawable/background_purple"
          android:text="NEXT"
          android:textColor="@color/white"
          android:textSize="25sp"
          android:layout_marginEnd="3dp"
          android:layout_marginBottom="3dp"
          app:layout_constraintVertical_bias="0.0"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginTop="642dp"
          android:layout_marginStart="7dp"
          tools:ignore="HardcodedText,MissingConstraints,SpUsage" />

   </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>